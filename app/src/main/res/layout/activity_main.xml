<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/txt_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local IP: "
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="22sp"
            android:layout_below="@id/txt_ip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edit_ip"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Peer IP (manual)"
            android:inputType="text"
            android:layout_below="@id/txt_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_connect_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:layout_below="@id/edit_ip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinner_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_connect_ip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <Spinner
            android:id="@+id/spinner_curve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_variant"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"/>

        <SeekBar
            android:id="@+id/seek_density"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_curve"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"/>

        <SeekBar
            android:id="@+id/seek_tempo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/seek_density"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START RITUAL"
            android:layout_below="@id/seek_tempo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"/>
    </RelativeLayout>
</ScrollView>
